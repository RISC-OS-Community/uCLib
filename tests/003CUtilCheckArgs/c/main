// Test the use of argc argv

// Include the uCLib header:
#include "LibuCLib:uCLib.h"
#include "LibuCLib:string.h"
#include "LibuCLib:itoa.h"

// include own header:
#include "main.h"

// define main function in ANSI C99 format:
int main(int argc, char *argv[])
{
	// Set some variables
	int rval = 0;

	char argnum[10];
	itoa(argc, (unsigned char *)argnum, 10, 10);

	// Call basic functions:
	sys_write(1, argnum, sizeof(argnum));
	sys_write_newline();
	sys_write(1, argnum, 0);
	sys_exit(12);

	// End of the code:
	return rval;
	UNUSED(argc);
	UNUSED(argv);
}

