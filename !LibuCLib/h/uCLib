#ifndef __ZFP_uCLIB_H
#define __ZFP_uCLIB_H

#define  UNUSED(x)              (x = x)

#define OS_WriteC    0x00
#define OS_WriteS    0x01
#define XOS_WriteS   0x20001
#define OS_Write0    0x02
#define XOS_Write0   0x20002
#define OS_NewLine   0x03
#define XOS_NewLine  0x20003
#define OS_Exit      0x11
#define XOS_Exit     0x20011

#define ABEX         0x58454241

void sys_exit(int error_code);

int sys_write_stdout(const char *buf, unsigned count);

void sys_write_newline(void);

int sys_write(unsigned fd, const char *buf, unsigned count);

#endif
